
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Order {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  totalAmount Float
  items       OrderItem[]
}

model OrderItem {
  id        String   @id @default(uuid())
  productId String
  name      String
  price     Float
  quantity  Int
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
}
